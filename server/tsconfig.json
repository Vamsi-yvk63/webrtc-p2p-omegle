{
  "compilerOptions": {
    /* File Layout */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Module + Target */
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "node",

    /* Environment */
    "types": ["node"],
    "esModuleInterop": true,
    "skipLibCheck": true,

    /* Output */
    "sourceMap": true,
    "declaration": true,

    /* Type Checking */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true
  },
  "include": ["src"]
}
